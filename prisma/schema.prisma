// Указывает, какой генератор использовать для создания Prisma Client или других утилит
generator client {
  provider = "prisma-client-js"
}

// Задает параметры подключения к базе данных
datasource db {
  provider = "postgresql" // или mysql, sqlite, sqlserver, mongodb
  url      = env("DATABASE_URL")
}

model Result {
  id                Int         @id @default(autoincrement())
  case              String      @unique
  sumFirst          Int
  sumNew            Int
  sumResult         Int
  comment           String
  active            Boolean
}

enum RequestType {
  feedback
  application
}

model Feedback {
    id                Int           @id @default(autoincrement())
    key               Int           @unique
    reqType           RequestType   @default(feedback)
    author            String
    city              String
    date              DateTime
    content           String
    active            Boolean
}

model Application {
  id                Int             @id @default(autoincrement())
  reqType           RequestType     @default(application)
  contactType       String
  phone             String?
  email             String?
  question          String
  fileName          String?
  fileUrl           String?
  createdAt         DateTime        @default(now())
}