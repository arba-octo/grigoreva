// Указывает, какой генератор использовать для создания Prisma Client или других утилит
generator client {
  provider = "prisma-client-js"
}

// Задает параметры подключения к базе данных
datasource db {
  provider = "postgresql" // или mysql, sqlite, sqlserver, mongodb
  url      = env("DATABASE_URL")
}

model Result {
  id                Int         @id @default(autoincrement())
  case              String      @unique
  sumFirst          Int
  sumNew            Int
  sumResult         Int
  comment           String
  active            Boolean
}

model Feedback {
    id                Int         @id @default(autoincrement())
    key               Int         @unique
    author            String
    city              String
    date              DateTime
    content           String
    active            Boolean
}

model Application {
  id           Int      @id @default(autoincrement())
  contactType  String
  phone        String?
  email        String?
  question     String
  fileName     String?
  fileUrl      String?
  createdAt    DateTime @default(now())
}